<div>
    <%= form_for @apartment do |f| %>
        <form class="form-horizontal">
            <div class="form-group">
                <%= f.label :image  %>
                    <%=f.file_field :apartment_img%>                 
            </div>
            <div class="form-group">
                <%= f.label :title %>
                    <%= f.text_field :title %>
            </div>
            <div class="form-group">
                <%= f.label :address%>
                    <%= f.text_field :address%>
            </div>
            <div class="form-group">
                    <%= f.label :neighborhood%>
                        <%= f.text_field :neighborhood%>
             </div>
            <div class="form-group">
                <%= f.label :bedrooms%>
                    <%= f.text_field :bedrooms%>
            </div>
            <div class="form-group">
                <%= f.label :bathrooms%>
                    <%= f.text_field :bathrooms%>
            </div>
            <div class="form-group">
                <%= f.label :description%>
                    <%= f.text_field :description%>
            </div>
            <div class="form-group">
                <%= f.label :price%>
                    <%= f.text_field :price%>
            </div>
                <%= f.submit %>
        </form>
    <div>
<% end %>